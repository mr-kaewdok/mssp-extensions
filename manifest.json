{
  "manifest_version": 3,
  "name": "MessageSpring Messager",
  "version": "1.0",
  "description": "Welcome to MessageSpring.",
  "permissions": ["storage", "identity"],
  "action": {
    "default_popup": "login.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}